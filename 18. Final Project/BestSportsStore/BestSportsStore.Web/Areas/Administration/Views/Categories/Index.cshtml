@using BestSportsStore.Web.Models.Menu.Category

@{
    ViewBag.Title = "Index";
    const string ControllerName = "Categories";
}

<h2>@ControllerName</h2>

@(Html.Kendo()
    .Grid<CategoryViewModel>()
    .Name("gridCategories")
    .Columns(cols =>
    {
        cols.Bound(pr => pr.Name);
        cols.Command(com => com.Edit()).Title("Edit");
        cols.Command(com => com.Destroy()).Title("Delete");
    })
    .ColumnMenu()
    .Pageable(page => page.Refresh(true))
    .Sortable()
    .Editable(edit => edit.Mode(GridEditMode.InLine))
    .ToolBar(toolbar => toolbar.Create())
    .DataSource(data =>
        data
            .Ajax()
            .Model(m =>
            {
                m.Id(cat => cat.Id);
            })
            .Read(read => read.Action("Read", ControllerName))
            .Create(create => create.Action("Create", ControllerName))
            .Update(update => update.Action("Update", ControllerName))
            .Destroy(destroy => destroy.Action("Destroy", ControllerName))
            ))