@using BestSportsStore.Web.Models.Menu.Category

@model IEnumerable<CategoryViewModel>

@{
    ViewBag.Title = "Index";
    const string ControllerName = "Categories";
}

<div class="row text-center" style="margin-top: 30px">
    <div class="col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">@ControllerName</h3>
            </div>
            <div class="panel panel-body">
                <table class="table table-striped table-hover">
                    <tr>
                        <th>@Html.ActionLink("Create new category", "Create", ControllerName, new {}, new { @class = "btn btn-default" })</th>
                    </tr>
                    <tr>
                        <th class="text-center">Name</th>
                        <th></th>
                        <th></th>
                    </tr>

                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Name</td>
                            <td>@Html.ActionLink("Edit", "Update", ControllerName, new { categoryId = category.Id}, new { @class = "btn btn-default" })</td>
                            <td>@Html.ActionLink("Delete", "Delete", ControllerName, new { categoryId = category.Id, url = Request.Url.PathAndQuery }, new { @class = "btn btn-default" })</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>