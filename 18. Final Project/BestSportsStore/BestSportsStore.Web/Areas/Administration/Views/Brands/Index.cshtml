@using BestSportsStore.Web.Models.Menu.Brand

@model IEnumerable<BrandViewModel>

@{
    ViewBag.Title = "Index";
    const string ControllerName = "Brands";
}

<div class="row text-center" style="margin-top: 30px">
    <div class="col-md-10">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">@ControllerName</h3>
            </div>
            <div class="panel panel-body">
                <table class="table table-striped table-hover">
                    <tr>
                        <th>@Html.ActionLink("Create new brand", "Create", ControllerName, new { }, new { @class = "btn btn-default" })</th>
                    </tr>
                    <tr>
                        <th class="text-center">Name</th>
                        <th class="text-center">Image</th>
                        <th></th>
                        <th></th>
                    </tr>

                    @foreach (var brand in Model)
                    {
                        <tr>
                            <td>@brand.Name</td>
                            <td><img src="@brand.ImageUrl"/></td>
                            <td>@Html.ActionLink("Edit", "Update", ControllerName, new { brandId = brand.Id }, new { @class = "btn btn-default" })</td>
                            <td>@Html.ActionLink("Delete", "Delete", ControllerName, new { brandId = brand.Id, url = Request.Url.PathAndQuery }, new { @class = "btn btn-default" })</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>