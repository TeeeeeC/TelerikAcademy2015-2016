@model IEnumerable<TwitterSystem.Web.Models.TweetViewModel>
@{
    ViewBag.Title = "User Details Page";
}

@if (Model.Count() == 0)
{
    <div class="jumbotron text-center">
        No tweets
    </div>
}

<h1 class="text-center">
    @Html.ActionLink("Create", "Create", new { @class = "btn btn-default" })
</h1>

@foreach (var tweet in Model)
{
    <div class="jumbotron text-center">
        <h1>Username: @tweet.User.UserName</h1>
        <p>FullName: @tweet.User.FullName</p>
        <p>@tweet.Text</p>
        <p><i>created on @tweet.TimeStamp</i></p>
        <p>Likes: @tweet.LikesCount</p>
    </div>
}
